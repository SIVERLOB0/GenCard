    width: 60px;
    height: auto;
    border-radius: 5px;
    box-shadow: 0 3px 8px rgba(0,0,0,0.12);
    object-fit: cover;
    transition: box-shadow 0.3s ease;
  }

  .wolf-img:hover {
    box-shadow: 0 0 12px #00FF88;
  }

  /* Icono terminal */
  .terminal-svg {
    width: 50px;
    height: 50px;
    stroke: #5BC0BE;
    cursor: pointer;
    transition: transform 0.2s ease;
  }

  .terminal-svg:hover {
    transform: scale(1.1);
    stroke: #00FF88;
  }

  .credits-footer {
    margin-top: 1rem;
    font-size: 0.8rem;
    color: #9EA8B4;
  }
</style>

<!-- ====== JS de funciones ====== -->
<script>
  (() => {
    const el = document.getElementById('digital-clock');

    function actualizar() {
      const t = new Date();
      let h = t.getHours();
      let m = String(t.getMinutes()).padStart(2, '0');
      let s = String(t.getSeconds()).padStart(2, '0');

      // Formato 12h con AM/PM
      const ampm = h >= 12 ? 'PM' : 'AM';
      h = h % 12 || 12;
      h = String(h).padStart(2, '0');

      // Parpadeo de los dos puntos
      const sep = t.getSeconds() % 2 === 0 ? ':' : ' ';
      el.textContent = `${h}${sep}${m}${sep}${s} ${ampm}`;
    }

    setInterval(actualizar, 1000);
    actualizar();
  })();

  // Efecto click en terminal
  const terminal = document.querySelector('.terminal-svg');
  terminal.addEventListener('click', () => {
    console.log("> npm run dev üü¢");
  });
</script>